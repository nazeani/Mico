@using Core.Models
@model List<Slider>
@{
    int container = 1;
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div> <a asp-action="Create" asp-controller="Slider"  class="btn btn-info">Create</a></div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">RedirectUrl</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(container++)</th>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.RedirectUrl</td>
                            <td><img src="~/uploads/sliders/@item.ImageUrl"/></td>
                            <td><a asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            <td><a asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">Update</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>